<UserControl x:Class="WpfApp2.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" Height="40" Width="200">
    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="180" Margin="9,3,0,0">
        <Grid Background="#FFB7B9B9" >
            <Canvas x:Name="layoutColor" Height="20" Opacity="1.0" Width="40" Margin="132,6,6,5"/>
            <Label x:Name="layoutName" HorizontalAlignment="Left" Opacity="1.0" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Constantia"/>
        </Grid>
    </Border>


</UserControl>
