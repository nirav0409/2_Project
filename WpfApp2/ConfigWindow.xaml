<Window x:Class="WpfApp2.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="450" Width="350">
    <Grid>
        <Grid x:Name="glowGrid"  HorizontalAlignment="Left" Height="180" Margin="67,93,0,0" VerticalAlignment="Top" Width="180">
            <Grid>
                <Ellipse Height="152" Width="152"    Stroke="Black" />
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Grid>
                <Ellipse Height="140" Width="140"    Stroke="Black" />
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Grid>
                <Ellipse Height="170" Width="170" StrokeThickness="2" Stroke="Black" />
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Canvas x:Name ="Button6" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="112" Margin="34,95,0,0" MouseLeftButtonDown="remoteButtonClick_6">
                <Canvas HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Width="112" Canvas.Top="10">
                    <Canvas.OpacityMask>
                        <ImageBrush ImageSource="Images/arrow_up_7.ico"/>
                    </Canvas.OpacityMask>
                    <Canvas.Background>
                        <ImageBrush ImageSource="Images/arrow_up_7.ico"/>
                    </Canvas.Background>
                </Canvas>
            </Canvas>
            <Canvas x:Name ="Button5" Height="55" Width="112" Margin="34,35,34,80" MouseLeftButtonDown="remoteButtonClick" Grid.Row="1" >
                <Canvas HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Width="112">
                    <Canvas.Background>
                        <ImageBrush ImageSource="Images/arrow_down_6.ico"/>
                    </Canvas.Background>
                </Canvas>
            </Canvas>
        </Grid>
        
    </Grid>
</Window>
