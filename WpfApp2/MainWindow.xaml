<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid  x:Name="buttonGrid" Margin="334,0,0,0">
            <Button x:Name="Button1"  Content="" HorizontalAlignment="Left" Margin="96,159,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button2" Content="" HorizontalAlignment="Left" Margin="178,159,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button3" Content="" HorizontalAlignment="Left" Margin="52,220,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button4" Content="" HorizontalAlignment="Left" Margin="141,219,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button0" Content="" HorizontalAlignment="Left" Margin="17,159,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button5" Content="" HorizontalAlignment="Left" Margin="40,53,0,0" VerticalAlignment="Top" Width="67" Height="67" FlowDirection="RightToLeft" Click="remoteButtonClick">
                <Button.Background>
                    <ImageBrush ImageSource="Images/Rotate_Icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button6" Content="" HorizontalAlignment="Left" Margin="141,53,0,0" VerticalAlignment="Top" Width="67" Height="67" >
                <Button.Background>
                    <ImageBrush ImageSource="Images/Rotate_Icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid  x:Name="mainGrid" Height="400" Width="313" HorizontalAlignment="Left"  Margin="-1,-2,0,-29" VerticalAlignment="Top">
            <Label Content="Label" HorizontalAlignment="Left" Margin="21,367,0,0" VerticalAlignment="Top"/>
            <Button Content="Upload" HorizontalAlignment="Left" Margin="234,326,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="" HorizontalAlignment="Left" Margin="166,293,0,0" VerticalAlignment="Top"  Width="33" Click="removeSelectedLayoutItem">
                <Button.Background>
                    <ImageBrush ImageSource="Images/Minus_Icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button Content="" HorizontalAlignment="Left" Margin="104,292,0,0" VerticalAlignment="Top" Width="33" Click="addLayout">
                <Button.Background>
                    <ImageBrush ImageSource="Images/Plus_Icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="250" Margin="40,37,0,0" VerticalAlignment="Top" Width="228" SelectionChanged="layoutSelected">
            </ListBox>
            <Button Content="Save" HorizontalAlignment="Left" Margin="12,326,0,0" VerticalAlignment="Top" Width="75" Click="saveButtonClicked"/>
            <Button Content="Load" HorizontalAlignment="Left" Margin="97,326,0,0" VerticalAlignment="Top" Width="75"/>
            <ComboBox HorizontalAlignment="Left" Margin="180,326,0,0" VerticalAlignment="Top" Width="40"/>

        </Grid>
    </Grid>
</Window>
