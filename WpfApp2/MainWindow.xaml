<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Remote Customizer" Height="550" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275*"/>
            <ColumnDefinition Width="317*"/>
        </Grid.ColumnDefinitions>
        <Grid  x:Name="buttonGrid" Margin="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="90*"/>
                <RowDefinition Height="83*"/>
            </Grid.RowDefinitions>
            <Button x:Name="Button1"  Content="" HorizontalAlignment="Left" Margin="157,159,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button2" Content="" HorizontalAlignment="Left" Margin="239,159,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button3" Content="" HorizontalAlignment="Left" Margin="113,220,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button4" Content="" HorizontalAlignment="Left" Margin="202,219,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button0" Content="" HorizontalAlignment="Left" Margin="78,159,0,0" VerticalAlignment="Top" Width="46" Height="36" Click="remoteButtonClick" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Images/icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Button5" Content="" HorizontalAlignment="Left" Margin="101,53,0,0" VerticalAlignment="Top" Width="67" Height="67" FlowDirection="RightToLeft" Click="remoteButtonClick" RenderTransformOrigin="0.5,0.5" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Images/Rotate_Icon.ico" Stretch="UniformToFill">
                        <ImageBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1" ScaleX="1"/>
                                <SkewTransform AngleY="0" AngleX="0"/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="Button6" Content="" HorizontalAlignment="Left" Margin="202,53,0,0" VerticalAlignment="Top" Width="67" Height="67" BorderThickness="0" Click="remoteButtonClick" >
                <Button.Background>
                    <ImageBrush ImageSource="Images/Rotate_Icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button x:Name="settingsButton" Content="" HorizontalAlignment="Left" Margin="328,7,0,0" VerticalAlignment="Top" Width="20" Height="21" BorderThickness="0" Opacity="0.5" Click="settingsButtonClicked">
                <Button.Background>
                    <ImageBrush ImageSource="Images/settings.ico"/>
                </Button.Background>
            </Button>
            <Border BorderBrush="Black" Height="200" VerticalAlignment="Top" Margin="5,40,10,0" Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" Name="sv1" Margin="0,-2,-2,2">
                    <TextBlock x:Name="outputTextBlock" Foreground="White" Background="Black" TextWrapping="Wrap" Width="335" Height="3094"  FontSize="11" FontFamily="Courier New"/>
                </ScrollViewer>
            </Border>
            
        </Grid>
        <Grid  x:Name="mainGrid" Height="521" Width="313" HorizontalAlignment="Left"  Margin="3,-2,0,0" VerticalAlignment="Top">
            <Button x:Name="uploadButton" Content="Upload" HorizontalAlignment="Left" Margin="236,434,0,0" VerticalAlignment="Top" Width="75" Click="uploadButtonClicked"/>
            <Button Content="" HorizontalAlignment="Left" Margin="166,401,0,0" VerticalAlignment="Top"  Width="33" Click="removeSelectedLayoutItem" BorderThickness="0" Height="26">
                <Button.Background>
                    <ImageBrush ImageSource="Images/Minus_Icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Button Content="" HorizontalAlignment="Left" Margin="116,398,0,0" VerticalAlignment="Top" Width="33" Click="addLayout" BorderThickness="0" Height="29">
                <Button.Background>
                    <ImageBrush ImageSource="Images/Plus_Icon.ico" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="356" Margin="40,37,0,0" VerticalAlignment="Top" Width="228" SelectionChanged="layoutSelected">
            </ListBox>
            <Button Content="Save" HorizontalAlignment="Left" Margin="5,434,0,0" VerticalAlignment="Top" Width="75" Click="saveButtonClicked"/>
            <Button Content="Load" HorizontalAlignment="Left" Margin="85,434,0,0" VerticalAlignment="Top" Width="75" Click="loadButtonClicked"/>
            <ComboBox x:Name="comPortBox" HorizontalAlignment="Left" Height="20" Margin="164,434,0,0"  VerticalAlignment="Top" Width="68"/>

        </Grid>
    </Grid>
</Window>
